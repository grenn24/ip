<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!-- Checkstyle configuration: Google-style with some common rules -->
<module name="Checker">

    <!-- Set file encoding -->
    <property name="charset" value="UTF-8"/>

    <!-- Limit line length -->
    <module name="LineLength">
        <property name="max" value="120"/>
    </module>

    <!-- Require newline at end of file -->
    <module name="NewlineAtEndOfFile"/>

    <module name="TreeWalker">
        <!-- Javadoc rules -->
        <module name="JavadocType"/>
        <module name="JavadocMethod"/>

        <!-- Naming conventions -->
        <module name="TypeName"/>           <!-- Classes/Interfaces: PascalCase -->
        <module name="MethodName"/>         <!-- Methods: lowerCamelCase -->
        <module name="ParameterName"/>      <!-- Parameters: lowerCamelCase -->
        <module name="LocalVariableName"/>  <!-- Locals: lowerCamelCase -->
        <module name="MemberName"/>         <!-- Fields: lowerCamelCase -->

        <!-- Code style rules -->
        <module name="WhitespaceAround"/>   <!-- e.g. if (x < y) not if(x<y) -->
        <module name="WhitespaceAfter"/>    <!-- e.g. int x, y not int x,y -->
        <module name="NeedBraces"/>         <!-- require braces for if/for/while -->
        <module name="EmptyBlock"/>         <!-- avoid empty code blocks -->

        <!-- Imports -->
        <module name="AvoidStarImport"/>
        <module name="UnusedImports"/>
    </module>
</module>
